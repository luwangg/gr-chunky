<?xml version="1.0"?>
<block>
  <name>sink</name>
  <key>chunky_sink</key>
  <category>chunky</category>
  <import>import chunky</import>
  <make>chunky.sink($maxlen, $exitafter)</make>

  <param>
    <name>maxlen</name>
    <key>maxlen</key>
    <value>200</value>
    <type>int</type>
  </param>

  <param>
    <name>exitafter</name>
    <key>exitafter</key>
    <value>int(1e6)</value>
    <type>int</type>
  </param>

  <sink>
    <name>in</name>
    <type>float</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>pdus</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

</block>

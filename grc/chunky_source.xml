<?xml version="1.0"?>
<block>
  <name>source</name>
  <key>chunky_source</key>
  <category>chunky</category>
  <import>import chunky</import>
  <make>chunky.source($min, $max)</make>

  <param>
    <name>min</name>
    <key>min</key>
    <value>100</value>
    <type>int</type>
  </param>

  <param>
    <name>max</name>
    <key>max</key>
    <value>200</value>
    <type>int</type>
  </param>

  <source>
    <name>pdus</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <source>
    <name>tagged_item_stream</name>
    <type>float</type>
    <optional>1</optional>
  </source>
</block>
